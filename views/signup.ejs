<%- include("partials/header.ejs") -%> 

<form action="" method="post">
    <h2>Sign up</h2>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" required>
    <label for="sex">Sex: </label>
    <select name="sex">
       <option value="Male">Male</option>
       <option value="Female">Female</option>
    </select>
    <label for="email">Email: </label>
    <input type="text" name="email" id="email" required>
    <div class="email error"></div>
    <label for="password">Password: </label>
    <input type="password" name="password" id="password" required>
    <div class="password error"></div>
    
    <button>Sign UP</button> <!-- automatically fires submit event when pressed -->
</form>

<script>
    const form = document.querySelector("form");
    const emailError = document.querySelector(".email.error");
    const passwordError = document.querySelector(".password.error");

    // reset errors every time sign up is clicked
    emailError.textContent = "";
    passwordError.textContent = "";

    form.addEventListener("submit", async (e) => {
        e.preventDefault(); // reset the default action which is refresh

        // get the body values
        const name = form.name.value;
        const email = form.email.value;
        const password = form.password.value;
        const sex = form.sex.value;
        
        try {
            const res = await fetch("/signup", {
                method: "POST",
                body: JSON.stringify({name, sex, email, password}),
                headers: {"Content-Type" : "application/json"}
            }).then((res) => {
                return res.json(); // parse the response recieved from fetch into a json object
            }).then((data) => {
                emailError.textContent = data.email; // email error display
                passwordError.textContent = data.password; // password error display
                if (data.status === 200){
                    location.assign("/"); // redirects to the home page if no error occured in the form validation
                }
            })
            // console.log(res);
        } catch (err) {
            console.log(err.message);
        }
    })
</script>
