<%- include("partials/header.ejs") -%> 

<form action="" method="post">
    <h2>Log IN</h2>
    <label for="email">Email: </label>
    <input type="text" name="email" id="email" required>
    <label for="password">Password: </label>
    <input type="password" name="password" id="password" required>
    <div class="password error"></div>
    <button>Log IN</button>
</form>

<script>
    const form = document.querySelector("form");
    const loginError = document.querySelector(".password.error");

    // reset errors every time sign up is clicked
    // emailError.textContent = "";
    // passwordError.textContent = "";

    form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // get the body values
        const email = form.email.value;
        const password = form.password.value;
        console.log(email, password);
        try {
            const res = await fetch("/login", {
                method: "POST",
                body: JSON.stringify({email, password}),
                headers: {"Content-Type" : "application/json"}
            })
            .then((res) => {
                return res.json(); // parse the response recieved from fetch into a json object
            }).then((data) => {
                loginError.textContent = data.message; // error display
                if (data.status === 200){
                    location.assign("/"); // redirects to the home page if no error occured in the form validation
                }
            })
            console.log(res);
        } catch (err) {
            console.log(err.message);
        }
    })
</script>

